{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    // Tell ts-node CLI to install the --loader automatically, explained below
    "esm": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ESNext"],
    "preserveConstEnums": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "newLine": "LF",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/index.html", "src/locales/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
