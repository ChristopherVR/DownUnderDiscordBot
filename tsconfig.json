{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ESNext"],
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "types": ["node"],
    "newLine": "LF",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/index.html", "src/locales/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
